{
  "name": "demo-server",
  "private": true,
  "version": "1.0.0",
  "description": "JRFS demo server",
  "license": "MIT",
  "type": "module",
  "bin": {
    "jrfs-demo-server": "bin/jrfs-demo-server.cjs"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "run-s lint-ts rm-build build-esm",
    "build-esm": "node ../../scripts/build-esm.mjs",
    "build-ts": "tsc",
    "format": "prettier --write \"./**/*.{css,js,jsx,scss,ts}\"",
    "lint": "eslint .",
    "lint-fix": "eslint . --ext .ts --fix",
    "lint-ts": "tsc --noEmit --pretty --project ./tsconfig.eslint.json",
    "rand": "cat /dev/urandom | tr -dc _A-Z-a-z-0-9 | head -c${C:-32};echo;",
    "rand-help": "echo 'Change count by running `C=21 npm run rand`'",
    "rm-build": "shx rm -rf dist/*",
    "start": "trap 'exit 0' SIGINT; nodemon ../designer-files/design/.jrfs/projectDb.json",
    "start-win": "nodemon",
    "start-bin": "node bin/jrfs-demo-server.cjs",
    "test": "echo 'Sorry, no tests yet!'",
    "watch": "tsc -w --noEmit --pretty --skipLibCheck --project tsconfig.eslint.json",
    "watch-build": "node --watch-path=./src ../../scripts/build-esm.mjs"
  },
  "nodemonConfig": {
    "delay": "250ms",
    "exec": "npm run build && node .",
    "ext": "js,ts",
    "watch": [
      "./public",
      "./src"
    ]
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/type-provider-typebox": "^4.1.0",
    "@fastify/websocket": "^10.0.1",
    "@jrfs/typebox": "*",
    "@jrfs/node": "*",
    "@jrfs/ws": "*",
    "@sinclair/typebox": "^0.33.7",
    "chalk": "^5.3.0",
    "change-case": "^5.4.4",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "dequal": "^2.0.3",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "fast-json-patch": "^3.1.1",
    "fastify": "^4.28.1",
    "fastify-multer": "^2.0.3",
    "fastify-plugin": "^4.5.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.1",
    "mime-types": "^2.1.35",
    "mutative": "1.0.11",
    "nanoid": "^5.0.7",
    "object-hash": "^3.0.0",
    "slugify": "^1.6.6",
    "tinybase": "^5.3.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@mgcrea/fastify-request-logger": "^1.7.1",
    "@mgcrea/pino-pretty-compact": "^1.3.0",
    "@types/ejs": "^3.1.5",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.12",
    "@types/yargs": "^17.0.33"
  }
}
